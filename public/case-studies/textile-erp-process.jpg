<svg width="800" height="600" xmlns="http://www.w3.org/2000/svg">
  <rect width="100%" height="100%" fill="#fafafa"/>
  <rect x="50" y="50" width="700" height="500" fill="#ffffff" stroke="#e5e7eb" stroke-width="2"/>
  <text x="400" y="100" text-anchor="middle" font-family="Arial, sans-serif" font-size="24" fill="#374151">Streamlined Process Flow</text>
  <text x="400" y="130" text-anchor="middle" font-family="Arial, sans-serif" font-size="16" fill="#6b7280">From Order to Delivery - Automated Workflow</text>
  
  <!-- Process steps -->
  <rect x="80" y="180" width="120" height="80" fill="#dbeafe" stroke="#3b82f6" stroke-width="2" rx="8"/>
  <text x="140" y="210" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#1e40af">Order</text>
  <text x="140" y="225" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#1e40af">Received</text>
  <text x="140" y="245" text-anchor="middle" font-family="Arial, sans-serif" font-size="10" fill="#3b82f6">Automated</text>
  
  <rect x="240" y="180" width="120" height="80" fill="#dcfce7" stroke="#22c55e" stroke-width="2" rx="8"/>
  <text x="300" y="210" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#166534">Inventory</text>
  <text x="300" y="225" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#166534">Check</text>
  <text x="300" y="245" text-anchor="middle" font-family="Arial, sans-serif" font-size="10" fill="#22c55e">Real-time</text>
  
  <rect x="400" y="180" width="120" height="80" fill="#fef3c7" stroke="#f59e0b" stroke-width="2" rx="8"/>
  <text x="460" y="210" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#92400e">Production</text>
  <text x="460" y="225" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#92400e">Schedule</text>
  <text x="460" y="245" text-anchor="middle" font-family="Arial, sans-serif" font-size="10" fill="#f59e0b">Optimized</text>
  
  <rect x="560" y="180" width="120" height="80" fill="#f3e8ff" stroke="#a855f7" stroke-width="2" rx="8"/>
  <text x="620" y="210" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#7c2d12">Quality</text>
  <text x="620" y="225" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#7c2d12">Control</text>
  <text x="620" y="245" text-anchor="middle" font-family="Arial, sans-serif" font-size="10" fill="#a855f7">Tracked</text>
  
  <!-- Arrows -->
  <path d="M 200 220 L 240 220" stroke="#6b7280" stroke-width="3" marker-end="url(#arrow)"/>
  <path d="M 360 220 L 400 220" stroke="#6b7280" stroke-width="3" marker-end="url(#arrow)"/>
  <path d="M 520 220 L 560 220" stroke="#6b7280" stroke-width="3" marker-end="url(#arrow)"/>
  
  <!-- Second row -->
  <rect x="160" y="320" width="120" height="80" fill="#fecaca" stroke="#ef4444" stroke-width="2" rx="8"/>
  <text x="220" y="350" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#7f1d1d">Packaging</text>
  <text x="220" y="365" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#7f1d1d">& Shipping</text>
  <text x="220" y="385" text-anchor="middle" font-family="Arial, sans-serif" font-size="10" fill="#ef4444">Automated</text>
  
  <rect x="320" y="320" width="120" height="80" fill="#e0e7ff" stroke="#6366f1" stroke-width="2" rx="8"/>
  <text x="380" y="350" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#312e81">Invoice</text>
  <text x="380" y="365" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#312e81">Generated</text>
  <text x="380" y="385" text-anchor="middle" font-family="Arial, sans-serif" font-size="10" fill="#6366f1">Instant</text>
  
  <rect x="480" y="320" width="120" height="80" fill="#d1fae5" stroke="#10b981" stroke-width="2" rx="8"/>
  <text x="540" y="350" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#064e3b">Delivery</text>
  <text x="540" y="365" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#064e3b">Complete</text>
  <text x="540" y="385" text-anchor="middle" font-family="Arial, sans-serif" font-size="10" fill="#10b981">Tracked</text>
  
  <!-- Curved arrows -->
  <path d="M 620 260 Q 650 290 620 320" stroke="#6b7280" stroke-width="3" fill="none" marker-end="url(#arrow)"/>
  <path d="M 160 360 L 320 360" stroke="#6b7280" stroke-width="3" marker-end="url(#arrow)"/>
  <path d="M 440 360 L 480 360" stroke="#6b7280" stroke-width="3" marker-end="url(#arrow)"/>
  
  <!-- Time indicator -->
  <rect x="250" y="450" width="300" height="40" fill="#f0f9ff" stroke="#0ea5e9" stroke-width="1" rx="20"/>
  <text x="400" y="475" text-anchor="middle" font-family="Arial, sans-serif" font-size="14" fill="#0c4a6e">Total Process Time: 75% Reduced</text>
  
  <defs>
    <marker id="arrow" markerWidth="10" markerHeight="7" refX="9" refY="3.5" orient="auto">
      <polygon points="0 0, 10 3.5, 0 7" fill="#6b7280"/>
    </marker>
  </defs>
</svg>